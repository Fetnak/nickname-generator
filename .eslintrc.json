{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "never"],
        "import/extensions": ["error", "ignorePackages"],
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "max-len": ["error", { "code": 800 }]
    }
}